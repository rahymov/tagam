<% @categories.each_slice(4) do |category| %>
  <div class="container" id="category_container">
    <% category.each do |cat| %>
      <div class="col-md-3">
        <div class="category">
          <h3><%= link_to cat.name, menu_item_by_slug_url(slug: cat.slug) %></h3>    
        </div>
      </div>
    <% end %>
  </div>
<% end %>